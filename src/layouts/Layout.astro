---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { title, description = "Welcome to Kevin's Developer Portfolio", lang = "en" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Developer, Portfolio, Web Development, Frontend, Backend, Programming" />
    <meta name="author" content="Kevin" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph Meta Tags (for social media sharing) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/preview.png" />
    <meta property="og:url" content="https://your-portfolio.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/preview.png" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" aria-hidden="true" />
    <title>{title}</title>

    <ClientRouter />

    <link rel="stylesheet" href="node_modules/aos/dist/aos.css" />
  </head>
  <body class="bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <slot />
    
    <script>
      import AOS from 'aos';
      AOS.init({ duration: 800, easing: 'ease-in-out' });
    </script>
  </body>
</html>

