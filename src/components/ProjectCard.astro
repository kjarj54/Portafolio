---
const { project } = Astro.props;

const tagIcons = {
  HTML5: 'devicon-html5-plain',
  CSS3: 'devicon-css3-plain',
  JavaScript: 'devicon-javascript-plain',
  React: 'devicon-react-original',
  'Node.js': 'devicon-nodejs-plain',
  MongoDB: 'devicon-mongodb-plain',
  Express: 'devicon-express-original',
  'Vue.js': 'devicon-vuejs-plain',
  Firebase: 'devicon-firebase-plain',
  'Tailwind CSS': 'devicon-tailwindcss-plain',
  Java: 'devicon-java-plain',
  'Spring Boot': 'devicon-spring-plain',
  MySQL: 'devicon-mysql-plain',
  JavaFX: 'devicon-java-plain',
  SQLite: 'devicon-sqlite-plain',
  APIs: 'devicon-api-plain',
  'Chart.js': 'devicon-chartjs-plain',
};
---

<div class="bg-gray-100 dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg" data-aos="fade-up">
  <img src={project.image || "/placeholder.svg"} alt={project.title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {project.tags.map((tag: string) => (
        <span class="flex items-center bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">
          <i class={`${tagIcons[tag as keyof typeof tagIcons] ?? ''} mr-1`}></i> {tag}
        </span>
      ))}
    </div>
    <a href={project.link} class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-200 font-semibold">
      View Project â†’
    </a>
  </div>
</div>