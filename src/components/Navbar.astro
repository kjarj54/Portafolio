---
const navItems = [
  { href: "#inicio", text: "Home" },
  { href: "#habilidades", text: "Abilities" },
  { href: "#formacion", text: "Training" },
  { href: "#proyectos", text: "Projects" },
];
---

<nav class="bg-gray-800 text-white p-4 sticky top-0 z-10">
  <ul class="flex justify-center space-x-6">
    {navItems.map((item) => (
      <li>
        <a href={item.href} class="hover:text-yellow-400 transition-colors">
          {item.text}
        </a>
      </li>
    ))}
    <li>
      <button id="toggle-theme" class="hover:text-yellow-400 transition-colors">
        <i class="bi bi-sun"></i>
      </button>
    </li>
  </ul>
</nav>

<script>
  const themeToggle = document.getElementById('toggle-theme');
  themeToggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
  });
</script>

