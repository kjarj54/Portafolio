---
const skills = [
  { name: 'HTML5', icon: 'html5' },
  { name: 'CSS3', icon: 'css3' },
  { name: 'JavaScript', icon: 'javascript' },
  { name: 'React', icon: 'react' },
  { name: 'Node.js', icon: 'nodejs' },
  { name: 'Python', icon: 'python' },
  { name: 'Git', icon: 'git' },
  { name: 'SQL', icon: 'database' },
];
---

<section id="skills" class="py-20 bg-gray-100 dark:bg-gray-700">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-8" data-aos="fade-up">My Skills</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {skills.map((skill) => (
        <div class="flex flex-col items-center" data-aos="zoom-in">
          <div class="bg-white dark:bg-gray-800 rounded-full p-4 shadow-lg mb-4">
            <i class={`devicon-${skill.icon}-plain w-12 h-12`}></i>
          </div>
          <span class="text-lg font-semibold">{skill.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>