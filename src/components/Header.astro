---
const navItems = [
  { name: "Home", href: "#home" },
  { name: "About", href: "#about" },
  { name: "Skills", href: "#skills" },
  { name: "Projects", href: "#projects" },
  { name: "Contact", href: "#contact" },
];
---

<header
  class="fixed w-full bg-white/90 dark:bg-gray-900/90 backdrop-blur-md shadow-md z-50"
>
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="#" class="text-3xl font-extrabold text-gray-800 dark:text-white">
      <span class="text-blue-500">Kevin</span>
      <span class="text-gray-600 dark:text-gray-300">Dev</span>
    </a>

    <!-- Navigation Links -->
    <div class="hidden md:flex space-x-6">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="relative text-gray-600 dark:text-gray-300 text-lg font-medium 
          after:content-[''] after:block after:h-[2px] after:w-0 after:bg-blue-500 after:transition-all 
          after:duration-300 hover:after:w-full hover:text-gray-900 dark:hover:text-white"
          >
            {item.name}
          </a>
        ))
      }
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-btn" class="md:hidden focus:outline-none">
      <svg class="h-8 w-8 text-gray-800 dark:text-white" viewBox="0 0 24 24">
        <path
          d="M4 6h16M4 12h16M4 18h16"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="absolute top-16 left-0 w-full bg-white dark:bg-gray-900 shadow-md p-5
  transform transition-transform duration-300 ease-in-out translate-x-full opacity-0"
  >
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class="block text-gray-700 dark:text-gray-300 text-lg py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-md"
        >
          {item.name}
        </a>
      ))
    }
  </div>
  <script>
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    let isOpen = false;

    menuBtn?.addEventListener("click", () => {
      isOpen = !isOpen;
      if (mobileMenu) {
        if (isOpen) {
        // Opening animation
        mobileMenu.classList.remove("translate-x-full", "opacity-0");
        mobileMenu.classList.add("translate-x-0", "opacity-100");
      } else {
        // Closing animation
        mobileMenu.classList.remove("translate-x-0", "opacity-100");
        mobileMenu.classList.add("translate-x-full", "opacity-0");
      }
      }
    });
  </script>
</header>
