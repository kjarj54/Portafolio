---
const navItems = [
  { name: "Home", href: "#home" },
  { name: "About", href: "#about" },
  { name: "Skills", href: "#skills" },
  { name: "Projects", href: "#projects" },
  { name: "Training", href: "#training" },
  { name: "Contact", href: "#contact" },
];
---

<header
  id="navbar"
  class="fixed top-0 w-full z-50 transition-all duration-300 bg-transparent"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="text-2xl font-bold bg-gradient-to-r from-red-400 to-pink-400 bg-clip-text text-transparent">
        Portfolio
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <button
              data-href={item.href}
              class="nav-link text-gray-300 hover:text-red-400 transition-colors duration-300 font-medium"
            >
              {item.name}
            </button>
          ))
        }
      </div>

      <!-- Mobile Navigation Button -->
      <button id="menu-btn" class="md:hidden text-gray-300 hover:text-red-400 transition-colors duration-300">
        <svg id="menu-icon" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
        <svg id="close-icon" class="h-6 w-6 hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden bg-slate-800/95 backdrop-blur-sm rounded-lg mt-2 py-4"
    >
      {
        navItems.map((item) => (
          <button
            data-href={item.href}
            class="nav-link-mobile block w-full text-left px-4 py-2 text-gray-300 hover:text-red-400 hover:bg-slate-700/50 transition-all duration-300"
          >
            {item.name}
          </button>
        ))
      }
    </div>
  </nav>
</header>

<script>
  import '../scripts/mobile-menu.ts';
</script>
