<section
  id="contact"
  class="py-20 px-4 relative bg-gradient-to-b from-slate-900/30 via-slate-900/60 to-slate-900"
>
  <!-- Top Transition -->
  <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-transparent via-slate-900/30 to-slate-900/60"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="scroll-animation text-center mb-16" data-animation="fade-up">
      <h2 class="section-title">
        Get In <span class="text-gradient">Touch</span>
      </h2>
      <div class="section-divider"></div>
      <p class="text-gray-300 text-lg max-w-2xl mx-auto mt-6">
        Ready to start your next project? Let's discuss how we can work together to bring your ideas to life.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div class="scroll-animation" data-animation="fade-right">
        <div>
          <h3 class="text-2xl font-bold text-white mb-8">Let's Connect</h3>

          <div class="space-y-6">
            <div class="contact-info-card">
              <div class="contact-icon">
                <svg class="text-white" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="m4 4 7.07 7.07a2 2 0 0 0 2.86 0L21 4"/>
                  <path d="M21 4v13a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Email</p>
                <p class="contact-value">kevin.arauz@example.com</p>
              </div>
            </div>

            <div class="contact-info-card">
              <div class="contact-icon">
                <svg class="text-white" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Phone</p>
                <p class="contact-value">+506 8888-8888</p>
              </div>
            </div>

            <div class="contact-info-card">
              <div class="contact-icon">
                <svg class="text-white" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <p class="contact-label">Location</p>
                <p class="contact-value">Costa Rica</p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h4 class="text-lg font-semibold text-white mb-4">Follow Me</h4>
            <div class="flex gap-4">
              <a href="https://github.com/kjarj54" target="_blank" rel="noopener noreferrer" class="social-link-contact" aria-label="GitHub Profile">
                <svg class="social-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="https://www.linkedin.com/in/arauzkj/" target="_blank" rel="noopener noreferrer" class="social-link-contact" aria-label="LinkedIn Profile">
                <svg class="social-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="mailto:kevin.arauz@example.com" class="social-link-contact" aria-label="Send Email">
                <svg class="social-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="m4 4 7.07 7.07a2 2 0 0 0 2.86 0L21 4"/>
                  <path d="M21 4v13a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="scroll-animation" data-animation="fade-left">
        <form
          id="contact-form"
          class="contact-form"
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          method="POST"
          name="contact"
        >
          <input type="hidden" name="form-name" value="contact" />
          <div class="hidden">
            <label>Don't fill this out if you're human: <input name="bot-field" /></label>
          </div>
          
          <div id="form-message" class="hidden p-4 rounded-md mb-4"></div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div class="form-group">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="form-input"
                placeholder="Your Name"
              />
            </div>
            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="form-input"
                placeholder="your.email@example.com"
              />
            </div>
          </div>

          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="form-input"
              placeholder="Project Discussion"
            />
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="form-input resize-none"
              placeholder="Tell me about your project..."
            ></textarea>
          </div>

          <button type="submit" id="submit-btn" class="cta-button primary w-full">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22,2 15,22 11,13 2,9 22,2"/>
            </svg>
            <span id="submit-text">Send Message</span>
            <span id="submit-loading" class="hidden">Sending...</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  /* Contact Styles */
  .contact-info-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(30, 41, 59, 0.5);
    border-radius: 0.5rem;
    border: 1px solid rgba(248, 113, 113, 0.2);
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .contact-info-card:hover {
    border-color: rgba(248, 113, 113, 0.4);
    transform: scale(1.05);
  }

  .contact-icon {
    background: #dc2626;
    padding: 0.75rem;
    border-radius: 9999px;
  }

  .contact-label {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .contact-value {
    color: white;
    font-weight: 600;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    display: block;
    color: #d1d5db;
    font-weight: 500;
  }

  .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid rgba(248, 113, 113, 0.2);
    border-radius: 0.5rem;
    color: white;
    transition: border-color 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .form-input::placeholder {
    color: #9ca3af;
  }

  .form-input:focus {
    border-color: #f87171;
    outline: none;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .social-link-contact {
    background: rgba(30, 41, 59, 0.5);
    padding: 0.75rem;
    border-radius: 9999px;
    border: 1px solid rgba(248, 113, 113, 0.2);
    transition: all 0.3s ease;
  }

  .social-link-contact:hover {
    background: #dc2626;
    border-color: #dc2626;
  }

  .social-link-contact:hover .social-icon {
    color: white;
  }

  .social-icon {
    color: #f87171;
    transition: color 0.3s ease;
  }
</style>

<script>
  import '../scripts/scroll-animation.ts';
  import "../scripts/contact.ts";
</script>
